{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 480,
    "height": 300,
    "background":"transparent",
    "data": {
      "url": "https://raw.githubusercontent.com/disha-shah12/FIT3179/refs/heads/main/annual_temp_difference_aus.csv"
      },
    "layer":[
      {
        "mark":"bar",
        "encoding": {
      "x":{
        "field":"Year",
        "type":"temporal",
        "title": "Year",
        "axis": {"tickCount": 10, "titleFont":"Roboto", "titleFontSize":12}
      },
      "y":{
        "field":"temp_diff",
        "type":"quantitative",
        "title": "Temperature Difference (°C)",
        "axis": {"titleFont":"Roboto", "titleFontSize":12}
      },
      "color":{
        "condition":{
          "test":"datum.temp_diff>0",
          "value":"#ff2c2c"
        },
        "value":"#1E90FF"
      },
      "tooltip":[
        {"field": "Year", "type": "temporal", "title": "Year", "format":"%Y"},
        {"field": "temp_diff","type": "quantitative","title": "Temperature Difference (°C)"}
      ]
        }
      },
      {
        "mark":{
          "type":"line",
          "color":"black",
          "point":"transparent"
        },
        "encoding":{
          "x":{
            "field":"Year", 
            "type":"temporal",
            "axis": {"tickCount": 10}
          },
          "y":{
            "field":"11_year_mean", "type":"quantitative", "axis":{"gridColor":"darkgray"}
          },
          "tooltip":[
            {"field": "Year", "type": "temporal", "title": "Year", "format":"%Y"},
            {"field": "11_year_mean","type": "quantitative","title": "11 year average temperature difference (°C)"}
          ]
        }
      },
        {
        "mark":{
          "type": "text",
          "dx": -5,
          "fontSize": 13,
          "font":"Roboto"
        },
        "encoding":{
          "text":{"value":"2019 was Australia's hottest year on record"},
          "x":{
            "value":330
          },
          "y":{
            "value":20
          },
          "color":{"value":"gray"}
        }
      }
  
    ]
  }
  