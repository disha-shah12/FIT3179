{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 450,
    "height": 300,
    "background":"transparent",
    "data": {
      "url": "https://raw.githubusercontent.com/disha-shah12/FIT3179/refs/heads/main/resp_crude_rate.csv"
      },
    "params":[
      {
        "name":"state_selection",
        "bind":{
          "input":"select",
          "options":[
            "New South Wales",
            "Victoria",
            "Queensland",
            "Australian Capital Territory",
            "South Australia",
            "Western Australia",
            "Tasmania",
            "Northern Territory"
          ],
          "labels":[
            "New South Wales",
            "Victoria",
            "Queensland",
            "Australian Capital Territory",
            "South Australia",
            "Western Australia",
            "Tasmania",
            "Northern Territory"
          ],
          "name": "State:"
        },
        "value":"New South Wales"
      }
    ],
    "transform":[
      {
        "filter": "datum.State == state_selection"
      }
    ],
    "mark":{
        "type":"line",
        "color":"darkblue"
    },
    "encoding": {
      "x":{
        "field":"Date",
        "type": "temporal",
        "timeUnit":"yearmonthdate",
        "title": "Date",
        "axis": {
          "format": "%b %Y", "tickCount":6, "titleFont":"Roboto", "titleFontSize":12
        }
      },
      "y":{
        "field":"crude_rate",
        "type":"quantitative",
        "title": "Crude Rate (per 100,000 people)",
        "axis":{
            "titleFont":"Roboto","titleFontSize":12
        }
      },
      "tooltip":[
        {"field": "Date", "type": "temporal", "title": "Date"},
        {"field": "State","type": "nominal","title": "State"},
        {"field": "crude_rate", "type":"quantitative", "title":"Crude Rate"}
      ]
    }
  }